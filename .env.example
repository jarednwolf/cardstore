# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/cardstore_operations?schema=public"
REDIS_URL="redis://localhost:6379"

# Application Configuration
NODE_ENV="development"
PORT=3005
API_VERSION="v1"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="24h"

# Shopify Configuration
SHOPIFY_WEBHOOK_SECRET="your-shopify-webhook-secret"
SHOPIFY_API_KEY="your-shopify-api-key"
SHOPIFY_API_SECRET="your-shopify-api-secret"
SHOPIFY_SCOPES="read_products,write_products,read_orders,write_orders,read_inventory,write_inventory,read_customers,write_customers"

# External API Configuration
TCGPLAYER_API_KEY="your-tcgplayer-api-key"
TCGPLAYER_API_SECRET="your-tcgplayer-api-secret"
BINDERPOS_API_URL="your-binderpos-api-url"
BINDERPOS_API_KEY="your-binderpos-api-key"
BINDERPOS_STORE_ID="your-store-id"
BINDERPOS_TIMEOUT="30000"
BINDERPOS_RETRY_ATTEMPTS="3"

# eBay Configuration
EBAY_CLIENT_ID="your-ebay-client-id"
EBAY_CLIENT_SECRET="your-ebay-client-secret"
EBAY_SANDBOX="true"

# ShipStation Configuration
SHIPSTATION_API_KEY="your-shipstation-api-key"
SHIPSTATION_API_SECRET="your-shipstation-api-secret"

# NATS Configuration
NATS_URL="nats://localhost:4222"
NATS_CLUSTER_ID="cardstore-cluster"

# Logging Configuration
LOG_LEVEL="info"
LOG_FORMAT="json"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE_MB=10
UPLOAD_PATH="./uploads"

# Multi-tenancy
DEFAULT_TENANT_ID="default"

# Automation Configuration
AUTOMATION_ENABLED="true"
AUTOMATION_MAX_RETRIES="3"
AUTOMATION_RETRY_DELAY="5000"
AUTOMATION_BATCH_SIZE="10"

# WebSocket Configuration
FRONTEND_URL="http://localhost:3000"
WEBSOCKET_ENABLED="true"
WEBSOCKET_CORS_ORIGIN="http://localhost:3000,http://localhost:3001,http://localhost:3005"

# Monitoring
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30000