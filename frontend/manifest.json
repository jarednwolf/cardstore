  "shortcuts": [
    {
      "name": "Scan Inventory",
      "short_name": "Scan",
      "description": "Quick inventory scanning with barcode reader",
      "url": "/mobile.html#scanner",
      "icons": [
        {
          "src": "/icons/scan-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "View Orders",
      "short_name": "Orders",
      "description": "Check pending and processing orders",
      "url": "/mobile.html#orders",
      "icons": [
        {
          "src": "/icons/orders-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Inventory Management",
      "short_name": "Inventory",
      "description": "Manage product inventory and stock levels",
      "url": "/mobile.html#inventory",
      "icons": [
        {
          "src": "/icons/inventory-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Analytics Dashboard",
      "short_name": "Analytics",
      "description": "View sales and performance analytics",
      "url": "/mobile.html#analytics",
      "icons": [
        {
          "src": "/icons/analytics-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/mobile-dashboard.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "narrow",
      "label": "Mobile Dashboard View"
    },
    {
      "src": "/screenshots/mobile-scanner.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "narrow",
      "label": "Barcode Scanner Interface"
    },
    {
      "src": "/screenshots/mobile-inventory.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "narrow",
      "label": "Inventory Management"
    },
    {
      "src": "/screenshots/desktop-dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Desktop Dashboard"
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://deckstack.app/manifest.json"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate",
  "protocol_handlers": [
    {
      "protocol": "web+deckstack",
      "url": "/mobile.html?action=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/mobile.html?import=csv",
      "accept": {
        "text/csv": [".csv"],
        "application/vnd.ms-excel": [".xls"],
        "application/vnd.openxmlformats-officedocument.spreadsheetml.sheet": [".xlsx"]
      },
      "icons": [
        {
          "src": "/icons/csv-import-96.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ],
      "launch_type": "single-client"
    }
  ],
  "share_target": {
    "action": "/mobile.html?share=true",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", "text/csv", ".xlsx"]
        }
      ]
    }
  }
}